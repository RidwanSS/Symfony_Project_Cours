{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
    <h1>Liste des categories</h1>
    {% if categories is not empty %}
        <table border="1">
            <thread>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thread>
            <tbody>
                {% for une_categorie in categories %}
                    <tr>
                        <td>
                            <a href="{{ path('ma_categorie', {'id': une_categorie.id}) }}">
                            {{ une_categorie.nom }}
                            </a>
                        </td>
                        <td>{{ une_categorie.description }}</td>
                        <td>
                            <a href="{{ path('delete_categorie', {'id': une_categorie.id}) }}">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Il n'y a aucune cat√©gorie</p>
    {% endif %}

    <h2>Ajouter un produit</h2>
    {{ form(form_categorie_new) }}
{% endblock %}
